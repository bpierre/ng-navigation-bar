.navbar-screen.previous
  display: none
  z-index: 1

no-anims()
  .navbar-back
  .navbar-title
  .navbar-action
  a, h1
    transition: none

.navbar
  no-anims()

.navbar.before-rtl
  no-anims()
  .current
    .navbar-back
      navbar-position('center')
    .navbar-title
      navbar-position('right-outside')
    .navbar-back
    .navbar-title
    .navbar-action
      opacity: 0
  .previous
    display: block

.navbar.before-rtl.show-rtl
  .navbar-back
  .navbar-title
  .navbar-action
  a, h1
    transition:
      transform navbar-anim-duration navbar-timing-function,
      opacity navbar-anim-duration navbar-timing-function
  .current
    .navbar-back
      navbar-position('left')
      opacity: 1
    .navbar-title
      navbar-position('center')
      opacity: 1
    .navbar-action
      opacity: 1
      transition: opacity navbar-anim-duration navbar-timing-function
  .previous
    .navbar-back
      navbar-position('left-outside')
      opacity: 0
    .navbar-title
      navbar-position('left')
      opacity: 0
    .navbar-action
      transition: opacity (navbar-anim-duration / 6) navbar-timing-function
      opacity: 0

.navbar.before-ltr
  no-anims()
  .current
    .navbar-back
      navbar-position('left-outside')
    .navbar-title
      navbar-position('left')
    .navbar-back
    .navbar-title
    .navbar-action
      opacity: 0
  .previous
    display: block

.navbar.before-ltr.show-ltr
  .navbar-back
  .navbar-title
  .navbar-action
  a, h1
    transition:
      transform navbar-anim-duration navbar-timing-function,
      opacity navbar-anim-duration navbar-timing-function
  .current
    .navbar-back
      navbar-position('left')
      opacity: 1
    .navbar-title
      navbar-position('center')
      opacity: 1
    .navbar-action
      opacity: 1
      transition: opacity navbar-anim-duration navbar-timing-function
  .previous
    .navbar-back
      navbar-position('center')
      opacity: 0
    .navbar-title
      navbar-position('right-outside')
      opacity: 0
    .navbar-action
      transition: opacity (navbar-anim-duration / 6) navbar-timing-function
      opacity: 0

